DB_HOST=example.database.com
DB_USER=exampleuser
DB_PASSWORD=examplepassword
DB_NAME=exampledb

# JWT Authentication
AUTH_TOKEN_SECRET=replace_with_a_long_random_string
AUTH_TOKEN_TTL=14400
JWT_SECRET=replace_with_another_long_random_string

# Fine System
DAILY_FINE_RATE=1.00

# Server Configuration
PORT=3000

# Advanced Security Settings (see ADVANCED_SECURITY_GUIDE.md)
# Generate secrets with: openssl rand -hex 32

# Block API tools like Postman/curl (true|false)
# Default: false (logs only)
BLOCK_API_TOOLS=false

# Enforce request signing headers (true|false)
# Default: false (allows unsigned requests)
# Set to true in production after migrating client
ENFORCE_REQUEST_SIGNING=false

# Optional: Additional security pepper for request signing
# If not set, will be auto-generated (not recommended for multi-instance deployments)
SECRET_PEPPER=

# Librarian Account Password (for create-librarian.js script)
# Generate strong password with: openssl rand -base64 24
LIBRARIAN_PASSWORD=YourSecurePassword@2024!
